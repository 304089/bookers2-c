<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td>
          <%= link_to group_path(group.id) do %>
            <%= attachment_image_tag(group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td>
          <%= link_to group.name, group_path(group.id) %>
        </td>
        <td>
          <%= group.introduction %>
        </td>
        <td>
          <%= group.group_users.count %>
        </td>
        <td>
      <% if group.owner_id == current_user.id %>
          <%= link_to "edit",edit_group_path(group.id),local: true,class: "btn btn-sm btn-success" %>
      <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
