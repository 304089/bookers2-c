<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>
          <%= attachment_image_tag(group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
        </td>
        <td>
          <%= group.name %>
        </td>
        <td>
          <%= group.introduction %>
        </td>
        <td>
          <% group_users.each do |group_user| %>
            <div><%= group_user.user.name %></div>
          <% end %>
        </td>
        <td>
    <% if group.owner_id == current_user.id %>
          <%= link_to "edit",edit_group_path(group.id),local: true,class: "btn btn-sm btn-success" %>
    <% elsif GroupUser.find_by(user_id: current_user.id, group_id: group.id) %>
          <%= link_to "leave this group",leave_group_group_user_path(group.id),method: :delete, local: true,class: "btn btn-sm btn-danger" %>
    <% else %>
          <%= link_to "Join this group",join_group_group_user_path(group.id),method: :post, local: true,class: "btn btn-sm btn-success" %>
    <% end %>
        </td>
      </tr>
  </tbody>
</table>